{
  "name": "tic-tac-toe",
  "version": "1.0.0",
  "description": "A clean, minimal Tic Tac Toe game with AI and local multiplayer",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.{ts,css}\" \"tests/**/*.ts\"",
    "check": "tsc --noEmit && vitest run"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.0.0",
    "terser": "^5.46.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
